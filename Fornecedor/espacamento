#include <stdio.h>
#include <string.h>
int main()
{
int l;

    char nome[100];
    
    printf("esceva o nome\n");
fgets(nome,sizeof(nome),stdin);
nome[strcspn(nome, "\n")] = 0; 

printf("|nome");
for(l=4;l<strlen(nome);l++){
  printf(" ");  
 
}
printf("|\n");
printf("|%s",nome);
for(l=4;l>strlen(nome);l--){
    
     printf(" ");
}
printf("|");
    return 0;
}
